<!--pages/shop/components/cart/cart.wxml-->
<view class="container">
  <view class="cart" wx:if="{{carList.length > 0}}">
    <view class="item" wx:for="{{carList}}">
      <checkbox class="checkbox" />
      <view class="pic"></view>
      <view class="info">
        <view class="title">
        {{item.name}}</view>
        <view class="param">{{item.id}}</view>
        <view class="box">
          <view class="price">{{item.amount}}</view>
        </view>
      </view>
    </view>
  </view>
  <view class="default" wx:else>
    <image src="/images/404.png" mode="aspectFit" />
    <text>您的购物车啥也没有，啥也不是</text>
  </view>
</view>
