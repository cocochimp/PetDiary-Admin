/* pages/shop/components/flash-sale-bar/flash-sale-bar.wxss */

.head {
  padding: 15px 15px 0;
  display: flex;
  align-items: center;
}

.head .label {
  color: black;
  font-weight: bold;
  margin-right: 5px;
  white-space: nowrap;
}

.head .countdown {
  display: flex;
  color: rgb(242, 32, 49);
  font-size: small;
}

.head .countdown .time {
  background-color: rgb(242, 32, 49);
  color: white;
  width: 20px;
  height: 20px;
  text-align: center;
  border-radius: 5px;
  margin: 0 3px;
}

.head .sub {
  font-size: small;
}

.list {
  height: 180px;
}

.item {
  margin: 15px;
  box-shadow: 0 0 20px -3px rgba(220, 220, 220, 0.8);
  height: 150px;
  border-radius: 10px;
  display: flex;
}
.itemPic {
  width: 300px;
  height: 100%;
}
.message {
  width: 70%;
  display: flex;
  flex-direction: column;
}
.message .name {
  margin: 15px 0 6px;
  color: black;
  font-size: 16px;
}
.message .category {
  background-color: rgb(219, 130, 185);
  color: white;
  text-align: center;
  width: 44px;
  font-size: 14px;
  padding: 1px;
  border-radius: 10px;
  margin-bottom: 28px;
}
.message .amount {
  color: #E54D42;
  font-size: 14px;
}
.message .price {
  text-decoration: line-through;
  font-size: 12px;
}