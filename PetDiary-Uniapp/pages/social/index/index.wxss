/* pages/user/test01/test01.wxss */

.view {
  height: 50px;
  width: 50px;
  background-color: var(--theme);
  border-radius: 0 0 50% 50%;
  transform: scale(20);
}

.a {
position: absolute;
top: -300px;
width: 100%;
display: flex;
justify-content: center;
z-index: -1;
}

.bar1 {
height: 110px;
margin: 20px;
display: flex;
align-items: center;
}

.bar1 .avatar {
height: 80px;
width: 80px;
border-radius: 50%;
background-color: white;
}

.bar1 .user {
color: white;
margin-left: 15px;
flex: 1;
}

.bar1 .user .name {
font-size: large;
font-weight: bold;
margin-top: 10px;
}

.bar1 .user .sub {
margin-top: 10px;
color: rgba(255, 255, 255, 0.7);
font-size: small;
}

.bar1 .card {
padding-top: 10px;
}

.bar2 {
display: flex;
justify-content: space-around;
align-items: center;
margin: 20px;
background-color: white;
box-shadow: 0 5px 15px -10px rgba(128, 128, 128, 0.5);
height: 100px;
border-radius: 15px;
}

.bar2 .item {
padding: 10px;
font-size: small;
color: #808080;
text-align: center;
}

.bar2 .item .num {
font-weight: bold;
font-size: large;
color: #333333;
}

.label {
font-weight: bold;
margin-left: 20px;
padding-top: 10px;
}

.bar3 {
display: flex;
justify-content: space-around;
align-items: center;
margin: 15px 20px;
background-color: white;
box-shadow: 0 3px 20px -10px rgba(128, 128, 128, 0.5);
height: 100px;
border-radius: 15px;
}

.bar3 .item {
padding: 10px;
text-align: center;
font-size: 15px;
}

.bar3 .item .iconfont {
height: 30px;
width: 30px;
font-size: 30px;
}
.icon-renlianshibie {
  color: #e74c3c;
  font-weight: 800;
}
.icon-todo_list {
  color: #3498db;
  font-weight: 800;

}
.icon-xietodo {
  color: #2ecc71;
  
}
.icon-todo {
  color: #f39c12;
}
.bar4 {
margin: 15px 20px;
display: grid;
grid-template-columns: 1fr 1fr;
column-gap: 15px;
}

.bar4 .item {
height: 100px;
background-color: rgb(220, 220, 220);
border-radius: 15px;
}

.list {
background-color: #F4F5F7;
width: 750rpx;
height: 900rpx;

}
.list .list-top {
display: flex;
justify-content: space-around;
height: 100rpx;
padding: 10rpx 100rpx ;
border-bottom: 16rpx solid white;
}
.list .list-top .list-sort {
  background-color: #fff;
  color: #FE697C;
  line-height: 100rpx;
  text-align: center;
  width: 170rpx;
  border-radius: 50%;
  border: 1px solid #FE697C;
}

.list .list-top .active1 {
  background-color: #FE697C;
  border: 0;
  color: white;
}
.list  .list-left {
  float: left;
  width: 15%;
  height: 800rpx;
  border-right: 4rpx solid #fff;
  padding-right: 8rpx;
}
.list .list-left .list-nation {
  width: 100%;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  margin: 4rpx;
  background-color: #f5bdc5;
  overflow: hidden;
  box-sizing: border-box;
}
.list .list-left .active2 {
  background-color: #f5a5b1;
  border: 4rpx dashed rgb(238, 78, 78);
}
.list .list-right {
  float: left;
  display: grid;
  grid-template-columns: 1fr 1fr;
  column-gap: 10px;
  height: 800rpx;
  margin: 0 10rpx;
}
.list-animal {
  width: 290rpx;
  height: 400rpx;
  background-color: white;
}
.list-animal image {
  width: 100%;
  height: 250rpx;
}
.tabs {
  height: 80vh;
}
.content {
  padding: 12px;
  height: 100%;
  box-sizing: border-box;
}
.footer {
  background-color: #fff;
  height: 12vh;
}
.content .pet {
  width: 47%;
  float: left;
  margin: 6rpx;
  margin-bottom: 12rpx;
  background-color: #EEEEEE;
  font-size: 13px;
  border-radius: 23rpx;
  overflow: hidden;
  height: 200px;
  color: black;
}
.content .pet image {
  width: 100%;
  height: 200rpx;
}
.content .pet .character {
  display: inline-block;
  margin-top: 10rpx;
  color: #333333;
}
.content .word {
  margin-left: 6rpx;
}
.content-tabs {
  color: red;
  padding: 12px;
}

.ant-container-content {
  height: 10px;
  margin-top: -12px;
}
swiper-item {
  padding-bottom: 0;
  height: 250px;
}
.label {
  margin-top: -28px;
}
.bar3 {
  margin-top: -10px;
}
.cdContainer {
  margin-top: -10px;
}