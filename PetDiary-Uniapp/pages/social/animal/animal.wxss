/* pages/index/index.wxss */
page {
  padding: 12px;
  color: #333333;
  box-sizing: border-box;
  background-color: #eeeeee;
}

.container {
  display: flex;
  flex-direction: row;
  padding: 20px 10px;
}

.avatar {
  width: 33.33%;
  /* 左侧宽度占比 */
  text-align: center;
}

.avatar image {
  width: 100%;
  height: 200px;
  box-shadow: -8px 20px 24px rgba(0, 0, 0, 0.3);
  /* 添加阴影效果 */

}

.info {
  width: 66.66%;
  /* 右侧宽度占比 */
  padding-left: 10px;
  /* 右侧内容与头像之间的间距 */
  height: 243px;
  overflow: hidden;
}

.name {
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 10px;
}

.nation,
.type {
  font-size: 16px;
  color: #666;
  margin-bottom: 5px;
}

.content {
  height: 210px;
  display: flex;
}

.content .box {
  background-color: #eeeeee;
  flex: 1;
  border-radius: 4px;
}

.content .box:not(:first-of-type) {
  margin-left: 8px;
}

.type text {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
  -webkit-line-clamp: 3;
  text-overflow: ellipsis;
}