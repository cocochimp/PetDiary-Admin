.goods-container {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  box-sizing: content-box;
  padding: 24rpx;
  background-color: #F2f2f2;
}

.goods-box {
  width: 339rpx;
  height: 494rpx;
  background-color: #fff;
  overflow: hidden;
  margin-bottom: 24rpx;
  border-radius: 5px;
}

.goods-box .img-box {
  width: 339rpx;
  height: 339rpx;
  overflow: hidden;
  position: relative;
}

.goods-box .img-box image {
  width: 339rpx;
  height: 339rpx;
}

.goods-box .img-box .label {
  position: absolute;
  right: 0;
  top: 0;
  color: white;
  background-color: rgb(63, 62, 62);
  font-size: small;
  width: 20px;
  height: 20px;
  line-height: 20px;
  text-align: center;
  border-radius: 3px;
}

.titleBox {
  display: flex;
  align-items: center;
  padding-top: 24rpx;
}

.goods-box .goods-title {
  width: 500rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-size: 24rpx;
  color: #000;
  margin-left: 24rpx;
}

.goods-box .petLabel {
  z-index: 9999;
  width: 280rpx;
  font-size: 22rpx;
  color: white;
  margin-left: 24rpx;
}

.goods-box .petLabel text {
  background-color: #db6b49;
  padding: 0 10rpx;
  border-radius: 30px;
  height: 40px;
  white-space: nowrap; 
}

.goods-box .goods-price image {
  width: 20px;
  height: 20px;
  border-radius: 50%;
  margin-right: 4px;
}

.goods-box .goods-price {
  width: 280rpx;
  overflow: hidden;
  font-size: 24rpx;
  padding: 8rpx 0;
  padding-bottom: 2rpx;
  color: #e64340;
  margin-left: 24rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-self: center;
}

.goods-box .like {
  margin-right: 4px;
  width: 40px;
  color: rgb(134, 134, 134);
}

.goods-box .time {
  width: 280rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-size: 20rpx;
  color: #ccc;
  margin-left: 24rpx;
}